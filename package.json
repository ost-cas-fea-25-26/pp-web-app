{
  "name": "@ost-cas-fea-25-26/pp-web-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "npm run db:up && npm run db:migrate",
    "dev": "next dev --turbopack",
    "prebuild": "npm run db:migrate",
    "build": "next build --turbopack",
    "start": "next start",
    "check:unused": "knip --config knip.config.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx && npm run type-check && npm run check:unused",
    "lint:fix": "eslint src --ext .ts,.tsx --fix && npm run format",
    "format": "prettier --write .",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:debug": "DEBUG=pw:webserver npm run test:e2e",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "db:up": "docker compose up -d postgres",
    "db:migrate": "npx drizzle-kit migrate",
    "db:generate": "npx drizzle-kit generate",
    "api:generate": "openapi-typescript https://mumble-api-prod-714602723919.europe-west6.run.app/swagger/v1/swagger.json --output src/lib/api/generated/api.ts",
    "design-system:link": "cd ../pp-design-system && npm run build:lib && FILE=$(npm pack | tail -n 1) && cd ../pp-web-app && npm install ../pp-design-system/$FILE"
  },
  "engines": {
    "node": "^22.0.0"
  },
  "dependencies": {
    "@ost-cas-fea-25-26/pp-design-system": "^2.27.0",
    "@serwist/next": "^9.5.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@vercel/blob": "^2.0.0",
    "better-auth": "^1.4.3",
    "drizzle-orm": "^0.44.7",
    "next": "16.0.10",
    "pg": "^8.16.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "ulid": "^3.0.2",
    "vitest": "^4.0.14"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@smartive/eslint-config": "^7.0.0",
    "@smartive/prettier-config": "^3.1.2",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.14",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.5",
    "happy-dom": "^20.0.11",
    "knip": "^5.70.2",
    "mockserver-node": "^5.15.0",
    "openapi-typescript": "^7.10.1",
    "postcss": "^8.5.6",
    "prettier": "^3.7.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "serwist": "^9.5.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3"
  }
}
