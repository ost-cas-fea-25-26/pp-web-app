{
  "name": "@ost-cas-fea-25-26/pp-web-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "npm run auth:migrate:local",
    "dev": "next dev --turbopack",
    "build": "npm run auth:migrate:deploy && next build --turbopack",
    "start": "next start",
    "check:unused": "knip --config knip.config.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx && npm run type-check && npm run check:unused",
    "lint:fix": "eslint src --ext .ts,.tsx --fix && npm run format",
    "format": "prettier --write .",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "db:init:local": "docker compose up -d postgres && until pg_isready -h localhost -p 5432; do sleep 1; done",
    "auth:migrate:local": "npm run db:init:local && npx @better-auth/cli migrate --config src/lib/auth/auth.ts",
    "auth:generate:local": "npm run db:init:local && npx @better-auth/cli generate --config src/lib/auth/auth.ts",
    "auth:migrate:deploy": "npx @better-auth/cli migrate --yes --config src/lib/auth/auth.ts",
    "link:design-system:local": "cd ../pp-design-system && npm run build:lib && FILE=$(npm pack | tail -n 1) && cd ../pp-web-app && npm install ../pp-design-system/$FILE"
  },
  "engines": {
    "node": "^22.0.0"
  },
  "dependencies": {
    "@ost-cas-fea-25-26/pp-design-system": "^2.13.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "better-auth": "^1.3.34",
    "next": "^15.4.6",
    "pg": "^8.16.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "vitest": "^4.0.9"
  },
  "devDependencies": {
    "@smartive/eslint-config": "^6.4.0",
    "@smartive/prettier-config": "^3.1.2",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.9",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "happy-dom": "^20.0.10",
    "knip": "^5.30.5",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.5.3"
  }
}
